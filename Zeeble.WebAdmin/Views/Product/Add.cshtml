@using Zeeble.Shared.Entities
@{
    ViewData["Title"] = "Add Product";
}

<div class="container">
    <div class="row">
        <h3 class="mt-4 mb-5">Add Product</h3>

        <div class="col-lg-12 mt-3">
            <form asp-controller="product" asp-action="add" method="post">
                <div class="row mb-3">

                    <div class="col-md-5 mt-3">
                        <div>
                            <label for="inputName" class="mb-2">Title *</label>
                            <input class="form-control" id="inputName" maxlength="150" required type="text" name="Title">
                        </div>

                        <div class="mt-3">
                            <label for="inputComment" class="mb-2">Quantity</label>
                            <input class="form-control" id="inputComment" type="text" name="Quantity">
                        </div>
                    </div>
                </div>

                <div class="mt-4 mb-0">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
        activeAdminMenu('#products');
    </script>
}