@using Zeeble.Shared.Entities
@{
    ViewData["Title"] = "Batches";
    var rows = ViewData["Rows"] as IEnumerable<Batch>;
}
@section Styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.css" />
}

<div class="container-fluid">
    <h3 class="mb-2">Batches</h3>

    <div class="row mt-3">
        <div class="col-12 p-1">
            <a href="~/batch/add" class="btn btn-dark float-end" title="New Batch">+</a>
        </div>

        <div class="col-12 mt-4">
            <table id="datatableBatches" class="table table-striped" style="width:100%">
                <thead>
                    <tr>                        
                        <th>Name</th>
                        <th>Standard</th>
                        <th>Fees</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var row in rows)
                    {
                        <tr>
                            <td>@row.Title</td>
                            <td>@row.Standard.Name</td>
                            <td>@row.Fee.Amount</td>
                            <td align="right">
                                <a href="~/batch/edit?id=@row.Id" class="btn btn-sm btn-primary"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a href="~/batch/delete?id=@row.Id" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
 
@section Scripts {

    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <script type="text/javascript">
        activeAdminMenu('#batches');
        $(document).ready(function () {
            new DataTable('#datatableBatches', {
                ordering: false,
                pageSize: 25
            });
        });

    </script>
}
