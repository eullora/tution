@using Zeeble.Shared.Entities
@{
    ViewData["Title"] = "Admission";
    var standardOptions = ViewData["StandardRows"] as IEnumerable<Standard>;    
    var batches = ViewData["BatchRows"] as IEnumerable<Batch>;
}

<div class="container">
    <div class="row">
        <h3 class="mt-2 mb-3">Admission Form</h3>

        <div class="col-lg-12">
            <form asp-controller="students" asp-action="add" method="post">
                <div class="row mb-3">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                <label for="inputFullName" class="mb-2">Student Full Name*</label>
                                <input class="form-control" id="inputFullName" autocomplete="off" maxlength="20" required type="text" name="FullName">
                            </div>

                            <div class="col-md-12 mt-3">
                                <label for="inputParentMobile" class="mb-2">Parent Mobile *</label>
                                <input class="form-control" id="inputParentMobile" autocomplete="off" maxlength="10" required type="text" name="ParentMobile">
                            </div>

                            <div class="col-md-12 mt-3">
                                <label for="selectGender" class="mb-2">Gender *</label>
                                <select class="form-select" id="selectGender" name="GenderId" required>
                                    <option value=""></option>
                                    <option value="M">Male</option>
                                    <option value="F">Female</option>
                                </select>
                            </div>

                            <div class="col-md-12 mt-3">
                                <label for="selectStandardId" class="mb-2">Standard *</label>
                                <select class="form-select" id="selectStandardId" name="StandardId"  required>
                                    <option value=""></option>
                                    @foreach (var standard in standardOptions)
                                    {
                                        <option value="@standard.Id">
                                            @standard.Name
                                        </option>
                                    }
                                </select>
                            </div>

                        </div>
                    </div>
                    <input type="hidden" value="0" name="EnquiryId" />

                    <div class="col-6">
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                <label for="inputAddress" class="mb-2">Address</label>
                                <input class="form-control" autocomplete="off" id="inputAddress"  maxlength="150" required type="text" name="Address">
                            </div>
                            <div class="col-md-12 mt-3">
                                <label for="inputStudentMobile" class="mb-2">Student Mobile</label>
                                <input class="form-control" autocomplete="off" id="inputStudentMobile" maxlength="10" required type="text" name="StudentMobile">
                            </div>

                            <div class="col-md-12 mt-3">
                                <label for="selectCast" class="mb-2">Cast *</label>
                                <select class="form-select" id="selectCast" name="Cast" required>
                                    <option value="Open">Open</option>
                                    <option value="SC">SC</option>
                                    <option value="VJ">VJ</option>
                                    <option value="NT2">NT2</option>
                                    <option value="SBC">SBC</option>
                                    <option value="OBC">OBC</option>
                                    <option value="ST">ST</option>
                                    <option value="N1">N1</option>
                                    <option value="NT3">NT3</option>
                                    <option value="EBC">EBC</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="col-md-12 mt-3">
                                <label for="txtSchool" class="mb-2">School *</label>
                                <input class="form-control " id="txtSchool" autocomplete="off" name="SchoolName">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mt-3">
                        <label for="selectBatch" class="mb-2">Batch *</label>
                        <select class="form-select" id="selectBatch" name="BatchId">
                            <option value=""></option>
                            @foreach (var batch in batches)
                            {
                                <option value="@batch.Id">@batch.Title</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-12">
                        <div class="mt-4 mb-0">
                            <button type="submit" class="btn btn-primary float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script type="application/json" id="batchScript">@Html.Raw(ViewData["BatchJson"].ToString())</script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js"></script>
    <script src="~/js/admit.js" asp-append-version="true"></script>
    <script type="text/javascript">
        activeAdminMenu('#students');
        $('#selectStandardId').val('');
    </script>
}