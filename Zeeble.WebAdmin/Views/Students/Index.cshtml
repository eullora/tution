@using Zeeble.Shared.Entities
@{
    ViewData["Title"] = "Counselling";
    var rows = ViewData["Rows"] as IEnumerable<Student>;
    var userRole = ViewData["UserRole"].ToString();
}
@section Styles {
<link rel="stylesheet" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.css" />
}

<div class="container-fluid">
    <h3 class="mb-2">Students</h3>

    <div class="row mt-3">
        <div class="col-12 p-1">
            <a href="!#" class="btn btn-warning float-end mx-2"><i class="fa-solid fa-upload"></i></a>

            @if (userRole != "foundation")
            {
                <a href="~/admit" class="btn btn-dark float-end">+</a>
            }
            else
            {
                <a href="~/students/add" class="btn btn-dark float-end">+</a>
            }

        </div>

        <div class="col-12 mt-4">
            <table id="datatableStudents" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Student Name</th>
                        <th>Roll Number</th>
                        <th>Parent Mobile</th>
                        <th>Student Mobile</th>
                        <th>Standard</th>
                        <th>Batch</th>
                         
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var row in rows)
                    {
                        <tr>
                            <td width="1%">
                                <a href="javascript:void(0);" class="float-end" title="Edit"><i class="fa-regular fa-pen-to-square"></i></a>
                            </td>
                            <td>@row.FullName</td>
                            <td>@row.RollNumber</td>
                            <td>@row.ParentMobile</td>
                            <td>@row.MobileNumber</td>
                            <td>@row.Standard.Name</td>
                            <td>@row.Batch.Title</td>
                         
                            <td align="right">
                                <a href="~/students/reset?id=@row.Id" class="btn btn-sm @( string.IsNullOrEmpty(row.DeviceToken) ? "btn-warning" : "btn-success")" title="Reset">
                                    <i class="fa-solid fa-arrows-rotate"></i>
                               </a>
                                <a href="~/students/perform?id=@row.Id" class="btn btn-sm btn-info" title="Performance"><i class="fa-solid fa-chart-simple"></i></a>
                                <a href="~/admit/confirm?id=@row.Id" class="btn btn-sm btn-dark" title="Print"><i class="fa-solid fa-print"></i></a>                                
                                <a href="~/students/delete?id=@row.Id" class="btn btn-sm btn-danger" title="Delete"><i class="fa-solid fa-trash-can"></i></a>                                
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <script type="text/javascript">
        activeAdminMenu('#students');
        new DataTable('#datatableStudents', {
            ordering: false
        });
    </script>
}
