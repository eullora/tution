@using Zeeble.Shared.Entities
@{
    ViewData["Title"] = "Videos";
    var rows = ViewData["Rows"] as IEnumerable<Streaming>;
}
@section Styles {
    <partial name="_DataTableStyles" />
}
<div class="container-fluid">
    <h3 class="mb-2">Videos</h3>

    <div class="row mt-3">
        <div class="col-12 p-1">
            <a href="~/streaming/add" class="btn btn-dark float-end">+</a>
        </div>

        <div class="col-12">
            <table id="datatableVideos" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Batch</th>                        
                        <th>Created On</th>                                                
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in rows)
                    {
                        <tr>
                            <td>@row.Title</td>
                            <td>@string.Join(",", row.StreamingBatches.Select(m => m.Batch.Title))</td>
                            <td>@row.CreatedOn.ToString("dd/MM/yyyy HH:mm")</td>        
                            
                            <td align="right">
                                <a class="btn btn-sm btn-primary" href="#!"><i class="fa-solid fa-video"></i></a>
                                <a class="btn btn-sm btn-danger" href="~/streaming/delete?id=@row.Id"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_DataTableJs" />

    <script type="text/javascript">
        activeAdminMenu('#videos');
        new DataTable('#datatableVideos', {
            ordering: false
        });

    </script>
}