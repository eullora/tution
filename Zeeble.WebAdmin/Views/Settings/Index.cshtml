@using Zeeble.Shared.Entities
@{
    ViewData["Title"] = "Settings";
    var rows = ViewData["Rows"] as IEnumerable<KeyPairModel>;
    var templateRows = ViewData["TemplateRows"] as IEnumerable<Template>;

}
<div class="container-fluid">
    <h3 class="mb-4">Settings</h3>

    <div class="row mt-3">
        <div class="col-md-3">

            <div class="card h-100">
                <div class="card-header">
                    Mobile Application Modules
                </div>
                <div class="card-body">
                    <table class="table table-borderless" style="width:100%">
                        <tbody>
                            @foreach (var row in rows)
                            {
                                <tr>
                                    <td id="title-@row.Id">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="@row.Id" id="sectionCheck-@row.Id" checked>
                                            <label class="form-check-label" for="sectionCheck-@row.Id">
                                                @row.Title
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

        <div class="col-md-4">

            <div class="card h-100">
                <div class="card-header">
                    Templates
                </div>
                <div class="card-body">
                    <table class="table table-borderless" style="width:100%">
                        <tbody>
                            @foreach (var row in templateRows)
                            {
                                <tr>
                                    <td>                                        
                                        @row.Title                                        
                                    </td>
                                    <td align="right">
                                        @if(row.FileId.EndsWith(".csv"))
                                        {
                                            <a href="~/settings/template/@row.Id" class="btn btn-success"><i class="fa-solid fa-file-excel"></i></a>
                                        }
                                        else
                                        {
                                            <a href="~/settings/template/@row.Id" class="btn btn-primary"><i class="fa-solid fa-file-word"></i></a>
                                        }


                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>



@section Scripts {

    <script type="text/javascript">
        activeAdminMenu('#settings');

        $(document).ready(function () {

        });
    </script>
}