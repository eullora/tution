<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zeeble.Mobile.ChapterListPage" 
             Shell.TitleColor="Gray"              
             Shell.BackgroundColor="#FFF"  Shell.ForegroundColor="Gray" 
             BackgroundColor="#FFF" Title="Chapters">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">

            <ActivityIndicator HorizontalOptions="Center"  HeightRequest="30" IsVisible="False"  Color="LightGrey" IsRunning="False" x:Name="LoadingIndicator">
            </ActivityIndicator>

            <CollectionView x:Name="CollectionViewChapters"  SelectionMode="Single" SelectionChanged="OnSelectionChanged">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="5" Margin="0,0,0,7" CornerRadius="5" BorderColor="LightGray" BackgroundColor="White" InputTransparent="True">
                            <HorizontalStackLayout >
                                <Label Text="{Binding Name}" VerticalOptions="Center" Margin="5" FontSize="14"  TextColor="#000"  />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </StackLayout>
    </ScrollView>

</ContentPage>
