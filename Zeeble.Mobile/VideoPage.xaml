<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" BackgroundColor="#FFF"
             x:Class="Zeeble.Mobile.VideoPage" Shell.NavBarIsVisible="True"
                       Shell.TitleColor="Gray"
            Shell.BackgroundColor="#FFF"      
            Shell.ForegroundColor="Gray"
             xmlns:ce ="clr-namespace:Zeeble.Mobile.CustomControls" Title="Videos">

    <Grid Padding="0"  RowDefinitions="Auto, *">
        
        <ActivityIndicator Grid.Row="0" HorizontalOptions="Center" IsVisible="False"  HeightRequest="35" Color="Gray" IsRunning="False"  x:Name="LoadingIndicator"></ActivityIndicator>
        
        <ListView x:Name="ListViewVideos" Grid.Row="1"  ItemSelected="ListViewVideos_ItemSelected" Margin="0,10" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  Width="Auto"/>
                                <ColumnDefinition  Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Frame Grid.Column="0" BorderColor="Transparent" BackgroundColor="Black" HeightRequest="50" WidthRequest="50" CornerRadius="50"  HorizontalOptions="Start" 
                                   VerticalOptions="Start" Margin="0,5,0,0" Padding="0">
                            </Frame>

                            <StackLayout Grid.Column="1" Padding="10" Spacing="2">
                                <Label  Text="{Binding Title}" FontSize="15" FontAttributes="Bold" TextColor="Black"/>
                                <Label  Text="{Binding CreatedOn, StringFormat='{0:MMMM dd, yyyy}'}" FontSize="Micro"  TextColor="Gray"/>
                            </StackLayout>

                        </Grid>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

     
        
    </Grid>
</ContentPage>