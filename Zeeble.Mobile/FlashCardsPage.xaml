             x:Class="Zeeble.Mobile.FlashCardsPage" 
             xmlns:models="clr-namespace:Zeeble.Mobile.Models"     
             xmlns:ce ="clr-namespace:Zeeble.Mobile.CustomControls"
             BackgroundColor="#FFF">
    
    <ScrollView>
        <VerticalStackLayout Padding="16">
            <Label 
                Text="Flash Cards" Margin="0,10,50,10" TextColor="Gray" FontFamily="NotoSerifBold" FontSize="25"/>

            <ce:CustomPicker x:Name="SubjectPicker" TextColor="Black"  BackgroundColor="White"></ce:CustomPicker>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
