<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zeeble.Mobile.QuizHomePage"               
               Shell.TitleColor="Gray" Shell.BackgroundColor="#FFF"  Shell.ForegroundColor="Gray" BackgroundColor="#FFF" Title="Subjects">


    <StackLayout Padding="5">
        
        <ActivityIndicator HorizontalOptions="Center"  HeightRequest="30" IsVisible="False"  Color="LightGray" IsRunning="False" x:Name="LoadingIndicator"></ActivityIndicator>

        <CollectionView x:Name="CollectionViewSubjects"  SelectionMode="Single"  SelectionChanged="OnSelectionChanged">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="5"  CornerRadius="5" Margin="5"  BorderColor="#E8E8E8" BackgroundColor="White" InputTransparent="True">
                        <VerticalStackLayout>

                            <HorizontalStackLayout >
                                <Image Source="{Binding Icon}" Aspect="Center" />
                                <Label Text="{Binding Name}" VerticalOptions="Center" Margin="10" FontAttributes="Bold" FontSize="15" TextColor="#000"  />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>


    </StackLayout>

</ContentPage>
