<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zeeble.Mobile.ExamPage" 
             BackgroundColor="White">

    <StackLayout Padding="0" >

        <StackLayout Orientation="Horizontal" Padding="1" Spacing="10">
            <Label x:Name="LabelTimer" HorizontalOptions="StartAndExpand"  FontSize="15" FontAttributes="Bold"  Margin="5"
                     VerticalOptions="Center"
                     Text="00:00:00" TextColor="Black"  />


            <Button  BackgroundColor="Black"  WidthRequest="120" Margin="5"  x:Name="ButtonEnd" 
                    HeightRequest="38" Text="Finish" TextColor="White" Clicked="ButtonEnd_Clicked"  HorizontalOptions="End" />

        </StackLayout>
        <StackLayout Padding="0">
            <ProgressBar Margin="0,0,0,0" x:Name="TimerProgressBar" ProgressColor="Navy" Progress="1.0"   HeightRequest="10"></ProgressBar>
        </StackLayout>
        <StackLayout>

            <Label  x:Name="QuestionNumbers" HorizontalOptions="Center"  TextColor="Black" FontSize="15" ></Label>

            <ScrollView HeightRequest="300"   Orientation="Vertical" Padding="1" VerticalScrollBarVisibility ="Always">

                <Image x:Name="QuestionImage" Margin="5" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand"  Aspect="AspectFit" />

            </ScrollView>

            <Label  x:Name="SubjectName" HorizontalOptions="Center" TextColor="Black" FontSize="15" ></Label>
        </StackLayout>


        <StackLayout Orientation="Horizontal"  Margin="15" Spacing="20" HorizontalOptions="CenterAndExpand"  x:Name="StackButtonHolder">
            <Button Text="A"  Clicked="ButtonAnswer_Clicked" CommandParameter ="A"  x:Name="Button_A" CornerRadius="50"  WidthRequest="55"  HeightRequest="55"
              FontSize="25"  TextColor="White" >
            </Button>

            <Button Text="B" Clicked="ButtonAnswer_Clicked"  FontSize="25" CornerRadius="50" WidthRequest="55" HeightRequest="55" x:Name="Button_B"
              TextColor="White" CommandParameter ="B">

            </Button>

            <Button Text="C" FontSize="25" x:Name="Button_C" TextColor="White" Clicked="ButtonAnswer_Clicked"  CommandParameter ="C"
                         CornerRadius="50" WidthRequest="55" HeightRequest="55">

            </Button>

            <Button Text="D"  FontSize="25" x:Name="Button_D" TextColor="White" Clicked="ButtonAnswer_Clicked" CommandParameter ="D"
              CornerRadius="50" WidthRequest="55" HeightRequest="55"></Button>

        </StackLayout>

        <StackLayout Orientation="Horizontal"  Margin="0,25" Spacing="10" HorizontalOptions="Center">
            <Button Text="&#xE5C4;" FontFamily="Material" BackgroundColor="White" BorderColor="Gray" BorderWidth="1" Clicked="Previous_Clicked"   
                  FontAttributes="Bold" FontSize="Medium" WidthRequest="100" TextColor="Black" HorizontalOptions="Center" x:Name="ButtonPrev">

            </Button>

            <Button Text="SKIP" BackgroundColor="White" BorderColor="Gray" BorderWidth="1"  CommandParameter ="S"  Clicked="Skip_Clicked"  TextColor="Red"   
                  FontAttributes="Bold" WidthRequest="100" HorizontalOptions="Center" x:Name="ButtonSkip">

            </Button>

            <Button  Text="&#xE5C8;" FontFamily="Material" BackgroundColor="White" BorderColor="Gray" BorderWidth="1" Clicked="Next_Clicked" 
                   x:Name="ButtonNext" FontAttributes="Bold" FontSize="Medium" WidthRequest="100" HorizontalOptions="Center" TextColor="Navy" >

            </Button>

        </StackLayout>

        <StackLayout>
            <Label  x:Name="LabelMessage" HorizontalOptions="CenterAndExpand" FontSize="Small" Margin="0,10" TextColor="Red"></Label>
            <Button BorderColor="Black" CornerRadius="50" HeightRequest="40" WidthRequest="40"  FontFamily="Material" BackgroundColor="White"  BorderWidth="1" x:Name="OmrButton"
           FontAttributes="Bold" Text="&#xE06D;" TextColor="Black" Clicked="ButtonOmr_Clicked"  HorizontalOptions="Center" />
            <ActivityIndicator HeightRequest="35"  Color="Navy" Margin="0,15" x:Name="ActivityLoader"  IsVisible="False" IsRunning="False"></ActivityIndicator>
        </StackLayout>

    </StackLayout>

</ContentPage>
