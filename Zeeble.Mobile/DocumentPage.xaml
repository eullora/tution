<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" BackgroundColor="#FFF"
             x:Class="Zeeble.Mobile.DocumentPage"  Shell.NavBarIsVisible="True" 
                       
            Shell.TitleColor="Gray"
            Shell.BackgroundColor="#FFF"      
            Shell.ForegroundColor="Gray"
              xmlns:ce ="clr-namespace:Zeeble.Mobile.CustomControls" Title="Documents">

    <Grid Padding="0"  RowDefinitions="Auto, *">
        <ActivityIndicator HorizontalOptions="Center" 
                      Color="Gray" Grid.Row="0"
                      HeightRequest="35" IsVisible="False" IsRunning="False" x:Name="LoadingIndicator"></ActivityIndicator>
        
        <ListView Grid.Row="1" x:Name="ListViewDocuments"   HasUnevenRows="True" ItemSelected="ListViewDocuments_ItemSelected" BackgroundColor="Transparent">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout  Padding="5" Spacing="2">
                            <Label Text="{Binding Title}" FontSize="15" Margin="10,0" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding DocumentType}" TextColor="Black" FontSize="Small"
                                     Margin="10,0" 
                                     HorizontalOptions="Start"
                                     VerticalOptions="Center"
                                     HorizontalTextAlignment="Center"
                                     VerticalTextAlignment="Center"></Label>
                            
                            <Label   Text="{Binding CreatedOn, StringFormat='{0:MMMM dd, yyyy}'}" HorizontalOptions="End" FontSize="12" Margin="0,-10,5,0"   TextColor="DarkSlateGrey"/>
                            
                        </StackLayout>
                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </Grid>

</ContentPage>