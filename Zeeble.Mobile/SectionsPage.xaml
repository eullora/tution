<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zeeble.Mobile.SectionsPage" 
             xmlns:models="clr-namespace:Zeeble.Mobile.Models"
             xmlns:viewmodels="clr-namespace:Zeeble.Mobile.ViewModels"             
             BackgroundColor="#FFF">
    
    <ContentPage.BindingContext>
        <viewmodels:SectionsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16">
            <Label 
                Text="Choose a Topic to Explore" Margin="0,10,50,10" TextColor="Gray" FontFamily="NotoSerifBold" FontSize="25"/>
            <FlexLayout BindableLayout.ItemsSource="{Binding Sections}"
                        Direction="Row"
                        Wrap="Wrap"
                        JustifyContent="SpaceEvenly"
                        AlignItems="Stretch"
                        Margin="-10,5">
                
                <BindableLayout.ItemTemplate>
                    
                    <DataTemplate x:DataType="models:Category">
                        
                        <Frame BackgroundColor="{StaticResource White}"
                                   FlexLayout.Basis="160"
                                   FlexLayout.Grow="0.75"
                                   FlexLayout.Shrink="0.5" HasShadow="True" 
                                   BorderColor="LightGray" InputTransparent="False"
                                   Margin="5,10">
                        
                            
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SectionsViewModel}}, Path=NavigateCommand}"
                                          CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Padding="20,6" VerticalOptions="Center"  Spacing="10">
                                <Label Text="{Binding IconText}"
                                           FontFamily="Material"
                                           FontSize="45"
                                           HorizontalOptions="Center"
                                           TextColor="{StaticResource Gray600}"/>
                                <Label Text="{Binding Name}"
                                           FontFamily="PoppinsSemibold"
                                           FontSize="16"
                                           TextColor="{StaticResource Gray600}"
                                           HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                        
                    </DataTemplate>
                    
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
